<Window x:Class="LicenseManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="15">
        <StackPanel>
            <TextBlock Text="Tài khoản" FontWeight="Bold"/>
            <TextBox x:Name="txtUser" Height="30" Width="300"  Margin="0,4" VerticalContentAlignment="Center"/>
            <TextBlock Text="Mật khẩu" FontWeight="Bold" Margin="0,8,0,0"/>
            <PasswordBox x:Name="txtPass" Height="30" Width="300" Margin="0,4" VerticalContentAlignment="Center"/>
            <Button Content="Đăng nhập" Height="35" Margin="0,14,0,0" Click="BtnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
